{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": false,
    "interface-name": false,
    "object-literal-sort-keys": false,
    "no-console": [
      false
    ],
    "no-var-requires": false,
    "semicolon": [
      true,
      "never"
    ],
    "array-type": [
      true,
      "generic"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ]
  }
}
